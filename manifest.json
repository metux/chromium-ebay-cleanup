{
    "manifest_version": 2,

    "name":        "metux ebay helper",
    "description": "makes browsing on ebay a little bit easier",
    "version":     "0.0.1",

    "icons": {
        "128": "icons/128.png",
        "16":  "icons/16.png",
        "48":  "icons/48.png"
    },

    "permissions": [
        "https://*.ebay.com/*",
        "https://*.ebay.de/*"
    ],

    "background" : {
        "scripts": ["util.js", "background.js"]
    },

    "page_action" :
    {
        "default_icon" : "icon.png",
        "default_title" : "metux ebay helper"
    },

    "content_scripts": [
        /* item pages */
        {
            "matches": [
                "https://www.ebay.de/itm/*",
                "https://www.ebay.com/itm/*",
                "https://www.ebay.ch/itm/*"
            ],
            "js": [
                "util.js",
                "content-script/item-page.js"
            ],
            "run_at": "document_start"
        },

        /* seller item list pages */
        {
            "matches": [
                "https://www.ebay.de/sch/*",
                "https://www.ebay.com/sch/*",
                "https://www.ebay.ch/sch/*"
            ],
            "js": [
                "util.js",
                "content-script/seller-items.js"
            ],
            "run_at": "document_end"
        }
    ]
}
